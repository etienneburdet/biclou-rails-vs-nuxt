<%= simple_form_for @bike do |f| %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :price_per_hour, as: :integer %>
<%= f.input :address %>
<%= f.input :photo, as: :file %>
<%= f.button :submit, class: "btn-primary" %>
<% end %>

<% @bikes.each do |bike| %>
  <%= bike.name %> <br>
  <%= bike.description %>
  <%= link_to bike_path(bike), method: :patch do %>
    I am available: <%= bike.available %>
  <% end %>
  <%= link_to "book this bike", new_bike_rental_path(bike) %>
  <br><br>
<% end %>
