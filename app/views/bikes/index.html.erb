<% @bikes.each do |bike| %>
  <%= bike.name %> <br>
  <%= bike.description %> <br><br>
<% end %>

<%= simple_form_for @bike do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price_per_hour %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
